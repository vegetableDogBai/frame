<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="userForm" type="com.bdl.forms.UserForm"/>
    </form-beans>
    <action-mappings>
        <action path="/login" name="userForm" scope="request" type="com.bdl.actions.LoginAction">
            <forward name="ok" path="/WEB-INF/wel.jsp"/>
            <forward name="err" path="/WEB-INF/err.jsp"/>
        </action>
    </action-mappings>
</struts-config>